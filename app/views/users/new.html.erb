 <% if flash[:error] %>
    <div class="error"><%= flash[:error] %></div>
  <% end %>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <ul>
      <% @user.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<div class="wrapper">
<div class="signup">
<h2>Sign Up!</h2>
<p>Please fill in this form to create an account.</p>
<%= form_for @user do |f| %>
    <div class="field_with_errors">
    <%= f.text_field :username, class: 'form-control', placeholder: 'Username', required: true %>
    </div><br>
    
    <div class="field_with_errors">
    <%= f.email_field :email, class: 'form-control', placeholder: 'Email', required: true %>
    </div><br>

    <div class="field_with_errors">
    <%= f.password_field :password, class: 'form-control', placeholder: 'Password', required: true %>
    </div><br>

    <div class="field_with_errors">
    <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password Confirmation', required: true %>
    </div><br>

    
    <%= f.submit 'Sign Up'%>
    
<%end%>
<p><%= link_to 'Signing in with the GitHub', '/auth/github'%>.</p>

</div>
</div>
  

