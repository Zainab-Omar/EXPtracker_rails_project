 <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>
 <% if flash[:error] %>
    <div class="error"><%= flash[:error] %></div>
  <% end %>

<h1>Sign In!</h1>

<%= form_for :user do |f| %>

    <%= f.label :email %>
    <%= f.email_field :email, required: true %>
    <br><br>

    <%= f.label :password %>
    <%= f.password_field :password, required: true %>
    <br><br>

    <%= f.submit 'Sign In' %>
<%end%>
<br><br>
  <p><%= link_to 'Signing in with the GitHub', '/auth/github'%>.</p>